<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="svendeMobil.Views.MessagePage"
             Title="MessagePage">
    <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
        <VerticalStackLayout>

            <Label 
            Text="Welcome to MESSAGES!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Label Text="Send til" />
            <Picker Title="Select a user"
                ItemsSource="{Binding Users}"
                 ItemDisplayBinding="{Binding Names}" />
            <Label Text="Subject" />
            <Entry x:Name="subject" Placeholder="Enter subject" Text="{Binding Subject}"/>
            <Label Text="Text" />
            <Entry x:Name="body" Placeholder="Enter some message" IsPassword="True" Text="{Binding Body}"/>
            <Button Text="Login" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center" Command="{Binding MessageCommand}"/>
        </VerticalStackLayout>
        
        
    </VerticalStackLayout>
</ContentPage>