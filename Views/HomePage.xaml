<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="svendeMobil.Views.HomePage"
             Title="HomePage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to MAUI HOME!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="This is the home page for all"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
               FontSize="Large"/>
        <Button Text="Messages" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center" Command="{Binding MessageOpenCommand}"/>
        <Button Text="Log Out" WidthRequest="100" CornerRadius="20" HorizontalOptions="Center" Margin="0,15" Command="{Binding LogOutCommand}"/>
        
    </VerticalStackLayout>
</ContentPage>